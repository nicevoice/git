/*
 @name 蓝色经典
 @notes 每条规则 以 .content-{模块文件夹名}-{风格包文件夹名} 开头
*/
.content-activity-blue{background-color:#fff;}
.content-activity-blue .mod-activity {
	padding:10px;
	font-size:12px;
	color:#06c;
}
.content-activity-blue .summary {
	padding-bottom:10px;
	line-height:18px;
	font-size:12px;
}
.content-activity-blue .require {
	color:#c00;
	border-top:1px dotted #ccc;
}
.content-activity-blue label {
	cursor:pointer;
	font-weight:normal;
}
.content-activity-blue table {
	color:#06c;
}
.content-activity-blue th {
	text-align:right;
	font-weight:normal;
}
.content-activity-blue th em {
	color:#c00;
}
.content-activity-blue input.input-submit {
	background:url("images/submit.gif") no-repeat 0 0;
	color:#fff;
	height:23px;
	width:72px;
	border:0;
}