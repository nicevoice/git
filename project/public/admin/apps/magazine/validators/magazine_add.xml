<?xml version="1.0" encoding="UTF-8"?>
<root> 
 	<name tips="请输入杂志名称">
	  	<required event="submit">名称不能为空</required>
	  	<min args="2">标题不能少于2个字</min>
	   	<max args="50">标题不能大于50个字</max>
    </name>
    <alias tips="只能有字母数字和下划线">
	  	<required event="submit">别名不能为空</required>
	  	<regex args="#^[\w]+$#">别名只能是字母开头,可包含字母数字及下划线.</regex>
    </alias>
    <type tips="例如：月刊、周刊...">
	  	<required event="submit">类型不能为空</required>
    </type>
    <publish tips="例如：每月5号、周三">
	  	<required event="submit">发布时间不能为空</required>
    </publish>
    <template_list tips="期列表页模板">
	  	<required event="submit">列表模板不能为空</required>
    </template_list>
    <template_content tips="期内页模板">
	  	<required event="submit">内页模板不能为空</required>
    </template_content>
    <link tips="杂志的官方网站,http开头">
	  	<url>只能是http开头的有效网址</url>
    </link>
</root>